WEBHOOK_TIMEOUT=10s
WEBHOOK_RETRIES=3
WEBHOOK_EVENTS=message,presence,receipt

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=console
LOG_COLOR_OUTPUT=true
LOG_TIME_FORMAT=2006-01-02 15:04:05

# Timezone
TZ=America/Sao_Paulo
